<h1><i class="fa fa-user-alt"></i> ข้อมูลผู้ใช้งาน</h1>
<hr />

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home">หน้าแรก</a></li>
        <li class="breadcrumb-item"><a href="/Admin">ผู้ดูแลระบบ</a></li>
        <li class="breadcrumb-item active" aria-current="page">ข้อมูลผู้ใช้งาน</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h5><i class="fa fa-search"></i> ค้นหาข้อมูล</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">รหัสผู้ใช้งาน</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="code" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">ชื่อ</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="firstName" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">นาสกุล</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="lastName" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">แผนก</label>
                    <div class="col-sm-8">
                        <select class="form-control" id="departmentId" asp-items="@dropdownList.DeaprtmentAll()">
                            <option value="0">ทั้งหมด</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">สถานะ</label>
                    <div class="col-sm-8">
                        <select class="form-control" id="statusId">
                            <option value="0">ทั้งหมด</option>
                            <option value="1">ใช้งาน</option>
                            <option value="2">ปิดการใช้งาน</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-primary" onclick="ReloadDatatable();"><i class="fa fa-search"></i> ค้นหา</button>
            </div>
        </div>
    </div>
</div>

<div class="card mt-1">
    <div class="card-header">
        <h5><i class="fa fa-clipboard-list"></i> ข้อมูลผู้ใช้งาน</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <a href="/UserManagement/Create?userId=0" class="btn btn-success"><i class="fa fa-plus"></i> เพิ่มข้อมูลผู้ใช้งาน</a>
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-md-12">
                <table id="userTable" class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>ลำดับ</th>
                            <th>รหัสผู้ใช้งาน</th>
                            <th>ชื่อ-นามสกุล</th>
                            <th>แผนก</th>
                            <th>เบอร์โทร</th>
                            <th>อีเมล์</th>
                            <th>สถานะ</th>
                            <th>
                                จัดการ
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var datatable;
        $(document).ready(function () {
            Datatable();

            $('#code,#firstName,#lastName').keyup(function (e) {
                if (e.keyCode === 13) {
                    ReloadDatatable();
                }
            })
        });
        function Datatable() {
            datatable = $('#userTable').DataTable({
                order: [],
                searching: false,
                ordering: true,
                lengthChange: false,
                pagingType: 'full_numbers',
                ajax: {
                    url: '/UserManagement/GetDatatable',
                    type: 'GET',
                    data: function (d) {
                        d.code = $('#code').val(),
                        d.firstName = $('#firstName').val(),
                        d.lastName = $('#lastName').val()
                        d.departmentId = $('#departmentId').val(),
                        d.statusId = $('#statusId').val()
                    },
                    dataSrc: function (data) {
                        return data;
                    },
                    statusCode: {
                        401: function (xhr, error, thrown) {
                            window.location.reload();
                            return false;
                        }
                    }
                },
                columns: [
                    {
                        data: 'userId',
                        className: 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        data: 'code',
                        className: 'text-center'
                    },
                    {
                        data: 'firstName',
                        render: function (data, type, row) {
                            return row.firstName + ' ' + row.lastName;
                        }
                    },
                    {
                        data: 'departmentName',
                        render: function (data, type, row) {
                            return row.departmentName;
                        }
                    },
                    {
                        data: 'tel',
                        render: function (data, type, row) {
                            return row.tel;
                        }
                    },
                    {
                        data: 'email',
                        render: function (data, type, row) {
                            return row.email;
                        }
                    },
                    {
                        data: 'isActive',
                        className: 'text-center',
                        render: function (data, type, row) {
                            var _isActive = '';
                            if (row.isActive) {
                                _isActive = '<i class="fa fa-circle status-success"></i> Active</td>'
                            } else {
                                _isActive = '<i class="fa fa-circle status-reject"></i> InActive</td>'
                            }
                            return _isActive;
                        }
                    },
                    {
                        data: 'userId',
                        className: 'text-center',
                        render: function (data, type, row) {
                            return '<button type="button" class="btn btn-warning btn-sm" onclick="Edit(' + row.userId + ')"><i class="fa fa-edit"></i> แก้ไข</button>' +
                                ' <button type ="button" class="btn btn-danger btn-sm" onclick="Delete(' + row.userId + ')"><i class="fa fa-trash"></i> ลบ</button>';;
                        }
                    }
                ]
            });
        }
        function ReloadDatatable() {
            datatable.ajax.reload();
        }
        function Edit(userId) {
            window.location.href = '/UserManagement/Create?userId=' + userId;
        }
        function Delete(userId) {
            $.showConfirm({
                title: "แจ้งเตือน",
                body: "คุณต้องการลบข้อมูล ใช่หรือไม่?",
                textTrue: "ใช่",
                textFalse: "ไม่ใช่",
                onSubmit: function (result) {
                    if (result) {
                        $.ajax({
                            url: '/UserManagement/Delete',
                            type: 'POST',
                            data: {
                                userId: userId
                            },
                            success: function (data) {
                                ResponseDialog(data.code, window.location.href);
                            }
                        })
                    }
                }
            })
        }
    </script>
}



