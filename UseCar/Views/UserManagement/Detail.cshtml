                                        <label>รหัสผู้ใช้งาน</label>
                                        <input type="text" class="form-control" disabled value="USER-0001" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>ชื่อ</label>
