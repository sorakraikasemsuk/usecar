<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">เพิ่ม/แก้ไขร้านซ่อม</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="repairShopForm" asp-controller="RepairShop" asp-action="CreateRepairShop" method="post" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                    <input type="hidden" id="repairShopId" name="repairShopId" />
                    <div class="card">
                        <div class="card-header">
                            <h5>ข้อมูลร้านซ่อม</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">ชื่อร้าน</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="repairShopName" name="repairShopName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">ที่อยู่</label>
                                <div class="col-sm-12">
                                    <textarea class="form-control" rows="3" id="repairShopAddress" name="repairShopAddress"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">เบอร์โทร</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="tel" name="tel" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">แฟกซ์</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="fax" name="fax" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">ประเภทร้านซ่อม</label>
                                <div class="col-sm-12">
                                    <select class="form-control" id="categoryShopId" name="categoryShopId" asp-items="@ViewBag.CategoryShopAll">
                                        <option value="">กรุณาเลือก</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-2">
                        <div class="card-header d-flex">
