                            <button type="button" class="btn btn-primary" onclick="Save();"><i class="fa fa-save"></i> บันทึก</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var datatable;
        $(document).ready(function () {
            Datatable();

            $('#textSearch').keyup(function (e) {
                if (e.keyCode === 13) {
                    ReloadDatatable();
                }
            })
        });
        function Datatable() {
            datatable = $('#repairTableTable').DataTable({
                order: [],
                searching: false,
                ordering: true,
                lengthChange: false,
                pagingType: 'full_numbers',
                ajax: {
                    url: '/RepairShop/GetDatatableRepairShop',
                    type: 'GET',
                    data: function (d) {
                        d.categoryShopId = $('#categoryShopIdFilter').val(),
                        d.repairShopName = $('#textSearch').val()
                    },
                    dataSrc: function (data) {
                        return data;
                    },
                    statusCode: {
                        401: function (xhr, error, thrown) {
                            window.location.reload();
                            return false;
                        }
                    }
                },
                columns: [
                    {
                        data: 'repairShopId',
                        className: 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        data: 'repairShopName',
                    },
                    {
                        data:'categoryShopName'
                    },
                    {
                        data: 'repairShopId',
                        className: 'text-center',
                        render: function (data, type, row) {
                            if (row.maInShop == 0) {
                                return '<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#addModal" onclick="Add(' + row.repairShopId + ')"><i class="fa fa-edit"></i> แก้ไข</button>' +
                                    ' <button type="button" class="btn btn-danger btn-sm" onclick="Delete(' + row.repairShopId + ')"><i class="fa fa-trash"></i> ลบ</button>';
                            } else {
                                return '<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#addModal" onclick="Add(' + row.repairShopId + ')"><i class="fa fa-edit"></i> แก้ไข</button>';
                            }
                        }
                    }
                ]
            });
        }
        function ReloadDatatable() {
            datatable.ajax.reload();
        }
        function Add(repairShopId) {
            $.ajax({
                url: '/RepairShop/GetRepairShopById',
                type: 'GET',
                data: {
                    repairShopId: repairShopId
                },
                success: function (data) {
                    $('#repairShopId').val(data.repairShopId);
                    $('#repairShopName').val(data.repairShopName);
                    $('#repairShopAddress').val(data.repairShopAddress);
                    $('#tel').val(data.tel);
                    $('#fax').val(data.fax);
                    $('#categoryShopId').val(data.categoryShopId);
                    $('#contact > .row').remove();
                    data.contactRepairShops.forEach(function (item) {
                        AddContact(item.contactName, item.tel, item.remark);
                    });
                }
            })
        }
        function Delete(repairShopId) {
            $.showConfirm({
                title: "แจ้งเตือน",
                body: "คุณต้องการลบข้อมูล ใช่หรือไม่?",
                textTrue: "ใช่",
                textFalse: "ไม่ใช่",
                onSubmit: function (result) {
                    if (result) {
                        $.ajax({
                            url: '/RepairShop/DeleteRepairShop',
                            type: 'POST',
                            data: {
                                repairShopId: repairShopId
                            },
                            success: function (data) {
                                ResponseDialog(data.code, window.location.href);
                            }
                        })
                    }
                }
            })
        }
        function Save() {
            $("#repairShopForm").validate({
                errorClass: 'text-danger',
            }); //sets up the validator
            $("#repairShopName").rules("add", {
                required: true,
                messages: {
                    required: 'กรุณากรอกข้อมูล'
                }
            });
            $("#repairShopAddress").rules("add", {
                required: true,
                messages: {
                    required: 'กรุณากรอกข้อมูล'
                }
            });
            $("#tel").rules("add", {
                required: true,
                messages: {
                    required: 'กรุณากรอกข้อมูล'
                }
            });
            $("#categoryShopId").rules("add", {
                required: true,
                messages: {
                    required: 'กรุณากรอกข้อมูล'
                }
            });

            //add validate contact
            $('#contact > .row').each(function () {
                var _rowId = $(this).attr('id').split('_')[1];
                $("#contactName_" + _rowId).rules("add", {
                    required: true,
                    messages: {
                        required: 'กรุณากรอกข้อมูล'
                    }
                });
                $("#contactTel_" + _rowId).rules("add", {
                    required: true,
                    messages: {
                        required: 'กรุณากรอกข้อมูล'
                    }
                });
            })

            var _checkRepairShopName = true;
            $.ajax({
                url: '/RepairShop/CheckRepairShopName',
                type: 'GET',
                async: false,
                data: {
                    repairShopId: $('#repairShopId').val(),
                    repairShopName: $('#repairShopName').val()
                },
                success: function (data) {
                    _checkRepairShopName = data;
                }
            })
            if (_checkRepairShopName) {
                var _contactRepairShops = [];
                $('#contact > .row').each(function () {
                    var _rowId = $(this).attr('id').split('_')[1];
                    _contactRepairShops.push({
                        contactRepairShopId:0,
                        contactName: $('#contactName_' + _rowId).val(),
                        tel: $('#contactTel_' + _rowId).val(),
                        remark: $('#remark_' + _rowId).val()
                    });
                });
                if (!$('#repairShopForm').valid()) {
                    $('#repairShopForm').submit();
                } else {
                    $.ajax({
                        url: '/RepairShop/CreateRepairShop',
                        type: 'POST',
                        data: {
                            repairShopId: $('#repairShopId').val(),
                            repairShopName: $('#repairShopName').val(),
                            repairShopAddress: $('#repairShopAddress').val(),
                            tel: $('#tel').val(),
                            fax: $('#fax').val(),
                            categoryShopId: $('#categoryShopId').val(),
                            contactRepairShops: _contactRepairShops
                        },
                        success: function (data) {
                            $('#addModal').modal('hide');
                            ResponseDialog(data.code, window.location.href);
                        }
                    })
                }
               
            } else {
                ExistDialog($('#repairShopName').val());
            }

        }
        function completed(res) {
            $('#addModal').modal('hide');
            ResponseDialog(res.responseJSON.code, window.location.href);
        }
        function AddContact(contactName,tel,remark) {
            var lastRowId = $('#contact > .row:last').length == 0 ? 0 : $('#contact > .row:last').attr('id').split('_')[1];
            var nextRowId = parseInt(lastRowId) + 1;
            var _element = '';
            _element += '<div class="row" id="row_' + nextRowId + '">';
            _element += '<div class="col-md-5">';
            _element += '<div class="form-group">';
            _element += '<label>ชื่อ</label>';
            _element += '<input type="text" class="form-control" id="contactName_' + nextRowId + '" name="contactName_' + nextRowId + '" value="' + contactName + '" />';
            _element += '</div>';
            _element += '</div>';
            _element += '<div class="col-md-3">';
            _element += '<div class="form-group">';
            _element += '<label>เบอร์โทร</label>';
            _element += '<input type="text" class="form-control" id="contactTel_' + nextRowId + '" name="contactTel_' + nextRowId + '" value="' + tel + '" />';
            _element += '</div>';
            _element += '</div>';
            _element += '<div class="col-md-3">';
            _element += '<div class="form-group">';
            _element += '<label>หมายเหตุ</label>';
            _element += '<input type="text" class="form-control" id="remark_' + nextRowId + '" value="' + remark + '" />';
            _element += '</div>';
            _element += '</div>';
            _element += '<div class="col-md-1">';
            _element += '<div class="form-group">';
            _element += '<label>&nbsp;</label>';
            _element += '<button class="btn btn-light d-block" onclick="DeleteContact(' + nextRowId + ')"><i class="fa fa-times text-danger"></i></button>';
            _element += '</div>';
            _element += '</div>';
            _element += '</div>';

            $('#contact').append(_element);
        }
        function DeleteContact(rowId) {
            $('#row_' + rowId).remove();
        }
    </script>
}


